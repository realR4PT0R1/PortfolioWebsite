---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import Camaroulko from "../../public/Camaro 1-1-23.jpg";
import Camarosisäyö from "../../public/Camaro 30-1-23.png";
import Camarosisäpäivä from "../../public/Camaro 30-1-23(2).png";
import peli97 from "/public/finngm.png";
import katiskapuh from "/public/14pro.png";
import katiskamac from "/public/katiskamac.png";
import macfivesix from "/public/macmocfivesix.png";
import puhfivesix from "/public/puhmocfivesix.png";
import unitypeli from "/public/unitypeli.png";
import bluebirdlogo from "/public/bluebird logo.png";
import bluebirdinterior from "/public/bluebird sisusta.png";
import pelitalot from "/public/pelitalot.png";
import risteys from "/public/risteys.png";
import blackbird from "/public/bluebird musta.png";
import renkaat from "/public/ruosterenkaat.png";
import projekti3 from "/public/Projekti 3-vuosi.png";
---

<Layout pageTitle="Projektit | Laemkri">
  <div class="my-3"></div>
  <div class="container">
    <h1 data-aos="fade-down" class="text-center gradient-title opintootsikko">
      Projektit
    </h1>
    <hr class="otsikkohr" />
    <div class="my-4"></div>
    <h1 data-aos="fade">Kolmannen vuoden projekti</h1>
    <hr class="keltanenhr" />
    <p data-aos="fade">
      Tehtävänäni oli luoda monikäyttöisen sovelluksen ulkoasu Figman avulla
    </p>
    <hr class="keltanenhr" />
    <div class="row">
      <div data-aos="fade-right" class="col-lg-5 text-center">
        <Image class="img-fluid" height={450} src={projekti3} alt="iphone" />
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="my-4"></div>
      <h1 data-aos="fade">FiveSix:n sivut</h1>
      <hr class="keltanenhr" />
      <p data-aos="fade">Kotisivut merkki-kaupalle Wordpressillä</p>
      <hr class="keltanenhr" />
      <div class="row">
        <div data-aos="fade-right" class="col-lg-5 text-center">
          <Image class="img-fluid" height={450} src={puhfivesix} alt="iphone" />
        </div>
        <div data-aos="fade-left" class="col-lg-7 d-none d-lg-block">
          <Image
            class="img-fluid"
            height={450}
            src={macfivesix}
            alt="macbook"
          />
        </div>
      </div>

      <div class="my-4"></div>
      <h1 data-aos="fade">Ravintola Katiskan sivut</h1>
      <hr class="keltanenhr" />
      <p data-aos="fade">
        Uudistetut kotisivut ravintolalle. Käytetty: HTML, CSS, JS, ASTRO
      </p>
      <hr class="keltanenhr" />
      <div class="row">
        <div data-aos="fade-right" class="col-lg-5 text-center">
          <Image class="img-fluid" height={450} src={katiskapuh} alt="iphone" />
        </div>
        <div data-aos="fade-left" class="col-lg-7 d-none d-lg-block">
          <Image
            class="img-fluid"
            height={450}
            src={katiskamac}
            alt="macbook"
          />
        </div>
      </div>

      <div class="my-5"></div>
      <h1 data-aos="fade">Finngame 97 (Prototyyppi)</h1>
      <hr class="keltanenhr" />
      <p class="alaotsikko" data-aos="fade">
        Suomalainen 1990-luvun teemainen peli. Käytetty: Unity, Blender, Adobe
        InDesign, Adobe Photoshop
      </p>
      <hr class="keltanenhr" />
      <div data-aos="fade" class="col-xxl-3 col-xl-4 col-md-6">
        <Image class="img-fluid rounded" src={unitypeli} alt="Unitypeli" />
      </div>
      <div data-aos="fade" class="col-xxl-3 col-xl-4 col-md-6">
        <Image
          class="img-fluid rounded"
          src={peli97}
          width="400"
          alt="juliste"
        />
      </div>
      <div data-aos="fade" class="col-xxl-3 col-xl-4 col-md-6">
        <Image class="img-fluid rounded" src={blackbird} alt="sitirentti" />
      </div>
      <div data-aos="fade" class="col-xxl-3 col-xl-4 col-md-6">
        <Image
          class="img-fluid rounded"
          src={bluebirdlogo}
          width="400"
          alt="juliste"
        />
      </div>
      <div data-aos="fade" class="col-xxl-3 col-xl-4 col-md-6">
        <Image
          class="img-fluid rounded"
          src={bluebirdinterior}
          alt="sitirentti"
        />
      </div>
      <div data-aos="fade" class="col-xxl-3 col-xl-4 col-md-6">
        <Image class="img-fluid rounded" src={pelitalot} alt="taloja" />
      </div>
      <div data-aos="fade" class="col-xxl-3 col-xl-4 col-md-6">
        <Image class="img-fluid rounded" src={risteys} alt="keskus" />
      </div>

      <div data-aos="fade" class="col-xxl-3 col-xl-4 col-md-6">
        <Image class="img-fluid rounded" src={renkaat} alt="renkaita" />
      </div>

      <div class="my-5"></div>
      <h1 data-aos="fade">Chevrolet Camaro SS 1967</h1>
      <hr class="keltanenhr" />
      <p class="alaotsikko" data-aos="fade">
        Chevrolet 3D-mallinnus projekti. Käytetty: Blender
      </p>
      <hr class="keltanenhr" />
      <div data-aos="fade" class="col-xxl-3 col-xl-4 col-md-6">
        <Image class="img-fluid rounded" src={Camaroulko} alt="camarokuva" />
      </div>
      <div data-aos="fade" class="col-xxl-3 col-xl-4 col-md-6">
        <Image class="img-fluid rounded" src={Camarosisäyö} alt="camarokuva" />
      </div>
      <div data-aos="fade" class="col-xxl-3 col-xl-4 col-md-6">
        <Image
          class="img-fluid rounded"
          src={Camarosisäpäivä}
          alt="camarokuva"
        />
      </div>
    </div>
    <p class="my-5"></p>

    <style>
      a {
        color: #d8d000;
      }

      h1 {
        color: #fff;
        font-family: SF;
      }
    </style>
  </div>
</Layout>
