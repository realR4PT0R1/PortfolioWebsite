  .nappula-rl {
    text-transform: uppercase;
    font-size: 10px;
    letter-spacing: 0.3em;
    padding: 12.5px 40px 12.5px;
    transition: all 0.5s ease-out;
    background-size: 300%;
    background: linear-gradient(60deg, #d8d000, #ff0080) border-box;
    border-color: #ff990000;
    color: #000000;
    display: inline-block;
    font-family: SF;
    border-radius: 6px;
    border: 3px solid transparent;


  }

  .nappula-rl:hover {
    background: linear-gradient(60deg, #d8d000, #ff0080) border-box;
    border-color: #ff990000;
    color: #000000;
  }

  .nappula {
    text-transform: uppercase;
    font-size: 10px;
    letter-spacing: 0.3em;
    padding: 12.5px 40px 12.5px;
    transition: all 0.5s ease-out;
    background-size: 300%;
    background:
      linear-gradient(#202020, #202020) padding-box,
      linear-gradient(60deg, #d8d000, #ff0080) border-box;
    color: #ffffff;
    border-radius: 6px;
    border: 3px solid transparent;
    display: inline-block;
    font-family: SF;
  }

  .nappula:hover {
    background: linear-gradient(60deg, #d8d000, #ff0080) border-box;
    border-color: #ff990000;
    color: #000000;
  }

  .info {
    width: 90px;
    height: 90px;
  }

  p {
    color: rgb(255, 255, 255);
    font-family: SF;
  }

  h1 {
    font-family: SF;
    font-weight: 700;
    background: #ff0080;
    background: linear-gradient(to right, #d8d000 0%, #ff0080 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  h5 {
    font-family: SF;
    font-weight: 100;
    color: white;
    letter-spacing: 0.5px;
  }

  a {
    color: #d8d000;
    text-decoration: none;
    font-family: SF;
  }

  a:hover {
    color: #d8d000;
  }

  a:active {
    color: #d8d000;
  }
</style>
