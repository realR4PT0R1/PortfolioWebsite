---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import blackbird from "/public/bluebird musta.png";
import katiskaproto from "/public/katiskaproto.png";
import katiskajulkaisu from "/public/katiskajulkaisu.png";
import volvocityl from "/public/volvocityl.png";
import comet from "/public/comet.png";
import fivesix from "/public/fivesiks.png";
import nokia8110 from "/public/8110.png";
import alpine from "/public/alpine.png";
import autoetu from "/public/auto-etu.png";
import s23u from "/public/s23u.png";
---

<Layout pageTitle="Blogi | Laemkri">
  <div class="container my-4">
    <h1 data-aos="fade-down" class="text-center gradient-title opintootsikko">
      Blogi
    </h1>
    <hr class="otsikkohr mb-4" />
    <div class="row my-5">
      <hr class="keltanenhr" />
      <div class="col-md-6" data-aos="fade-right" data-aos-duration="500">
        <h1 class="aliotsikko">Datsun 610 - Bluebird (vm.1976)</h1>
        <h5>Blender projekti</h5>
        <p class="text-underline">22.01.2025</p>
      </div>
      <div class="col-md-6" data-aos="fade-left" data-aos-duration="800">
        <Image class="img-fluid rounded" src={autoetu} alt="Vento" />
      </div>
    </div>

    <div class="row my-5">
      <hr class="keltanenhr" />
      <div class="col-md-6" data-aos="fade-right" data-aos-duration="500">
        <h1 class="aliotsikko">Samsung Galaxy S23 Ultra</h1>
        <h5>Blender projekti</h5>
        <p class="text-underline">20.08.2024</p>
      </div>
      <div class="col-md-6" data-aos="fade-left" data-aos-duration="800">
        <Image class="img-fluid rounded" src={s23u} alt="Vento" />
      </div>
    </div>

    <div class="row my-5">
      <hr class="keltanenhr" />
      <div class="col-md-6" data-aos="fade-right" data-aos-duration="500">
        <h1 class="aliotsikko">Nokia 8110i</h1>
        <h5>Blender projekti</h5>
        <p class="text-underline">20.08.2024</p>
      </div>
      <div class="col-md-6" data-aos="fade-left" data-aos-duration="800">
        <Image class="img-fluid rounded" src={nokia8110} alt="Vento" />
      </div>
    </div>

    <div class="row my-5">
      <hr class="keltanenhr" />
      <div class="col-md-6" data-aos="fade-right" data-aos-duration="500">
        <h1 class="aliotsikko">Alpine 7909</h1>
        <h5>Blender projekti</h5>
        <p class="text-underline">10.07.2024</p>
      </div>
      <div class="col-md-6" data-aos="fade-left" data-aos-duration="800">
        <Image class="img-fluid rounded" src={alpine} alt="Vento" />
      </div>
    </div>

    <div class="row my-5">
      <hr class="keltanenhr" />
      <div class="col-md-6" data-aos="fade-right" data-aos-duration="500">
        <h1 class="aliotsikko">FiveSix:n nettisivut</h1>
        <h5>Kuvitteellisen FiveSix kaupan nettisivut</h5>
        <p class="text-underline">20.05.2024</p>
      </div>
      <div class="col-md-6" data-aos="fade-left" data-aos-duration="800">
        <Image class="img-fluid rounded" src={fivesix} alt="Vento" />
      </div>
    </div>

    <hr class="keltanenhr" />
    <div class="row">
      <div class="col-md-6" data-aos="fade-right" data-aos-duration="800">
        <h1 class="aliotsikko">Nissan Bluebird (vm.1991)</h1>
        <h5>Blender projekti Unityss√§</h5>
        <p class="text-underline">29.04.2024</p>
      </div>
      <div class="col-md-6" data-aos="fade-left" data-aos-duration="500">
        <Image class="img-fluid rounded" src={blackbird} alt="Bluebird T12" />
      </div>
    </div>

    <hr class="keltanenhr" />

    <div class="row">
      <div class="col-md-6" data-aos="fade-right" data-aos-duration="800">
        <h1 class="aliotsikko">Ravintola Katiska | finaaliversio</h1>
        <h5>Koulu projekti</h5>
        <p class="text-underline">24.04.2024</p>
      </div>
      <div class="col-md-6" data-aos="fade-left" data-aos-duration="800">
        <Image
          class="img-fluid rounded"
          src={katiskajulkaisu}
          alt="Bluebird T12"
        />
      </div>
    </div>

    <hr class="keltanenhr" />

    <div class="row">
      <div class="col-md-6" data-aos="fade-right" data-aos-duration="500">
        <h1 class="aliotsikko">Ravintola Katiska | alphaversio</h1>
        <h5>Koulu projekti</h5>
        <p class="text-underline">20.03.2024</p>
      </div>
      <div class="col-md-6" data-aos="fade-left" data-aos-duration="800">
        <Image
          class="img-fluid rounded"
          src={katiskaproto}
          alt="Bluebird T12"
        />
      </div>
    </div>

    <hr class="keltanenhr" />

    <div class="row">
      <div class="col-md-6" data-aos="fade-right" data-aos-duration="500">
        <h1 class="aliotsikko">Volvo City L (vm.2004)</h1>
        <h5>Blender projekti</h5>
        <p class="text-underline">03.09.2023</p>
      </div>
      <div class="col-md-6" data-aos="fade-left" data-aos-duration="800">
        <Image class="img-fluid rounded" src={volvocityl} alt="Bluebird T12" />
      </div>
    </div>
    <hr class="keltanenhr" />

    <div class="row">
      <div class="col-md-6" data-aos="fade-right" data-aos-duration="500">
        <h1 class="aliotsikko">Mercury Comet (vm.1964)</h1>
        <h5>Blender projekti</h5>

        <p class="text-underline">15.05.2023</p>
      </div>
      <div class="col-md-6" data-aos="fade-left" data-aos-duration="800">
        <Image class="img-fluid rounded" src={comet} alt="Bluebird T12" />
      </div>
    </div>
  </div>
</Layout>
