---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import ScrollToTop from "../components/ScrollToTop.astro";
import "bootstrap/dist/css/bootstrap.min.css";
import "../styles/global.css";
import "../styles/aos.css";
---

<!doctype html>
<html lang="fi">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Suomen paras leipomo" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/public/Laemkrifav.png" />
    <!-- <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet"> -->
  </head>
  <body>
    <ScrollToTop />
    <Nav />
    <slot />
    <Footer />
    <script
      src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
      <script is:inline src="/scripts/aos.js"></script>
    <!-- <script is:inline src="/public/scripts/bootstrap.bundle.min.js"></script> -->
    <!-- <script is:inline src="/public/scripts/jquery.slim.min.js"></script> -->
    <!-- <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script> -->
    <script is:inline>
      AOS.init({
        duration: 1500,
        disable: "mobile",
      });
    </script>
  </body>
</html>

<style>
  body {
    background-color: #202020;
  }
</style>
