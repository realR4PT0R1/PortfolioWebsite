---
import { Image } from "astro:assets";
import laemkri from "/public/laemkri1.png";
import linkedin from "/public/Linkedin.png";
import github from "/public/github.png";
import instagram from "/public/Instagram.png";
---

<footer>
  <section>
    <div class="container mt-4">
      <div class="row mt-3 text-center">
        <div class="col-md-3 mx-auto">
          <Image src={laemkri} alt="logo" class="footer-logo" />
          <hr class="keltanenhr" />
          <a class="links234" href="/projektit"
            >Projektit <span class="white"> → </span>
          </a>
          <br />
          <a class="links234" href="/blogi"
            >Blogit <span class="white"> → </span>
          </a>
          <br />
          <a class="links234" href="/kokemus"
            >Kokemus <span class="white"> → </span>
          </a>
        </div>
        <div class="col-md-3 mx-auto">
          <p class="text-uppercase fw-bold my-4 footer-otsikko">Somet</p>
          <hr class="keltanenhr" />
          <a href="https://www.instagram.com/mankilauri/" class="mx-1">
            <Image src={instagram} alt="instagram" class="instagram" />
          </a>

          <a
            href="https://www.linkedin.com/in/lauri-raitio-8827b5291/"
            class="mx-2"
          >
            <Image src={linkedin} alt="linkedin" class="linkedin" />
          </a>
          <a href="https://github.com/realR4PT0R1" class="mx-2">
            <Image src={github} alt="github" class="github" />
          </a>
        </div>
      </div>
      <div class="my-5"></div>
    </div>
    <p class="bottom">Copyright &copy; Laemkri 2024</p>
  </section>

  <style>
    .links234:hover {
      margin-left: 10px;
    }

    .footer-logo {
      margin-top: 20px;
      height: 30px;
      width: 170px;
    }

    .bottom {
      background-color: #161616;
      margin: 0px;
      padding: 10px;
      font-family: SF;
      text-align: center;
    }

    .footer-otsikko {
      color: #ff7300;
      text-align: center;
    }

    footer {
      position: relative;
    }

    section {
      font-family: SF;
      background-color: #1c1c1c;
      text-align: center;
      border-top: 2px solid transparent;
      border-image: linear-gradient(0.25turn, #ff7300, #522583);
      border-image-slice: 1;
      width: 100%;
    }

    .container {
      background-color: #1c1c1c;
    }

    p {
      font-size: 15px;
    }

    a {
      font-size: 18px;
      color: #ff7300;
    }

    a:hover {
      text-shadow: 1px 1px 3px #ff7300;
      transition: 0.5s;
    }
  </style>
</footer>
