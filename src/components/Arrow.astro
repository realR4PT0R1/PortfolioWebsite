<div class="arrows-body">
  <div class="arrow"></div>
</div>

<style>
  .arrows-body {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .arrow {
    position: relative;
    width: 30px;
    height: 30px;
    border-top: 7px solid #fff;
    border-left: 7px solid #fff;
    transform: rotate(-135deg);
    animation: arrow-load 1.7s infinite;
    animation-delay: -0.4s;
  }
  @keyframes arrow-load {
    0% {
      opacity: 0;
      transform: scaleY(1px);
    }
  }
</style>
